@model ProductStore.Domain.Entitys.Product

<div data-role="collapsible" data-collapsed="false" data-content-theme="c">
    <h2>@Model.Name</h2>
    <div>
        <div>
            @Model.Description
        </div>
        <div>
            <strong>(@Model.Price.ToString("# grn"))</strong>
        </div>
        <div>
            @using (Html.BeginForm("AddToCart","Cart"))
            {
                @Html.HiddenFor(x=>x.ProductID)
                @Html.Hidden("returnUrl",Request.Url.PathAndQuary)
                <input type="submit" class="btn btn-success" value="In cart" />
            }
        </div>
    </div>
</div>
