@model Store.Domain.Entities.Product

@{
    ViewBag.Title = "Admin panel: edit item";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    <!--you can disabled user check form in broser for the admin panel (in views); 
        if you want disabled check form for the all aplication(on side client) it doit in file Web.config   -->
    <!--Html.ClientValidationEnabled = false;
    Html.UnobtrusiveJavaScriptEnabled = false;-->
}

<div class="panel">
    <div class="panel-heading">
        <h2>
            Edit item "@Model.Name"
        </h2>
    </div>
@using (@Html.BeginForm("Edit","Admin",FormMethod.Post,new { enctype ="multipart/form-data"}))
{   
    <div class="panel-body">
        @Html.HiddenFor(m=>m.ProductID)
        @foreach (var property in ViewData.ModelMetadata.Properties)
        {
            switch(property.PropertyName)
            {
                case "ProductID":
                case "ImageData":
                case "ImageMimeType":
                    break;
                default:
                    <div class="form-group">
                        <label>@(property.DisplayName ?? property.PropertyName)</label>
                            @if (property.PropertyName == "Description")
                            {
                            @Html.TextArea(property.PropertyName, null, new { @class = "form-control", row = 5 })
                            }
                            else
                            {
                            @Html.TextBox(property.PropertyName, null, new { @class = "form-control" })
                            }

                            @Html.ValidationMessage(property.PropertyName)
                    </div>
            break;
            }
        }
   

    <div class="form-group">
        <div style="position:relative">
            <label>Picture</label>
            <a class="btn" href='javascript:;'>
                Choose file...
            
            <input type="file" name="Image" size="40" style="position:absolute;z-index:2;top:0;
                                                            left:0;filter:alfa (opacity=0); opacity:0;
                                                            background-color:transparent;color:transparent"
                                                            onchange='$("#upload-file-info").html($(this).val());' />
        </a>
            <span class="label label-info" id="upload-file-info"></span>
        </div>
        @if (Model.ImageData == null)
        {
            <div class="=form-control-static">Don't have a picture</div>
        }
        else
        {
            <img class="img-thumbnail" width="150" height="150" src="@Url.Action("GetImage","Product",new {Model.ProductID})" />
        }
    </div>
        </div>
    <div class="panel-footer">
        <input type="submit" value="Save" class="btn btn-primary" />
        @Html.ActionLink("Cancel the chenges and return to the list","Index",null,new { @class = "btn btn-default" })
        </div>
}
</div>